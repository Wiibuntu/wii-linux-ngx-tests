--- net/8021q/vlan_dev.c
+++ net/8021q/vlan_dev.c
@@ -266,7 +278,8 @@ static int vlan_dev_open(struct net_device *dev)
 	    !(vlan->flags & VLAN_FLAG_LOOSE_BINDING))
 		return -ENETDOWN;
 
